<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_layout"
    tools:context=".UserSetAccountActivity"
    android:background="@android:color/white"
    >
        <TextView
            android:id="@+id/account_and_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:background="@color/colorMenuBar"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="냉장고 관리"
            android:fontFamily="@font/ggj_bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />
    <TextView
        android:id="@+id/connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIS_IS_냉장GO_MEMBERS"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_below="@id/account_and_connection"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ggj_bold"
        android:textSize="25sp" />

    <!--버튼-->
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnset"
        android:layout_below="@id/connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연결된 냉장고"
        android:textColor="#FE9A2E"
        android:textSize="20sp"
        android:fontFamily="@font/ggb_bold"
        android:layout_below="@id/connection_text"
         />
    <TextView
        android:layout_marginLeft="40dp"
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연결할 냉장고"
        android:textColor="#088A08"
        android:textSize="20sp"
        android:fontFamily="@font/ggb_bold"
        android:layout_below="@id/connection_text"
       android:layout_toEndOf="@id/btn_1"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameaccout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnset"
        android:layout_above="@id/menu_bar">
    </FrameLayout>

    <TableLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/menu_bar"
        >
        <TableRow
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:src="@drawable/recipe" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:src="@drawable/groups1" />

            <ImageView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:src="@drawable/user" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
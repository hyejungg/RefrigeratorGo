<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--검색창과 검색버튼-->
            <EditText
                android:background="@drawable/background9"
                android:id="@+id/search_bar"
                android:paddingStart="15dp"
                android:paddingBottom="5dp"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:hint="사용자 정보를 입력하시오."
                android:inputType="text"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:fontFamily="@font/ggb_bold"/>
            <ImageView
                android:id="@+id/search_button"
                android:layout_toEndOf="@+id/search_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/search_bar"
                android:background="@drawable/search_button"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/btn_bar"
            android:layout_margin="20sp"
            android:padding="20dp"
            android:id="@+id/rvF2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background8"
            />

    </LinearLayout>


</FrameLayout>